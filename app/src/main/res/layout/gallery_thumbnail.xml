<?xml version="1.0" encoding="utf-8"?>
<com.fras.msbm.gallery.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/progress"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleColor="@color/main_color_grey_300"
            app:mrl_rippleAlpha="0.7"
            app:mrl_rippleDimension="45dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleDuration="350"
            app:mrl_rippleFadeDuration="50"
            app:mrl_rippleBackground="@android:color/transparent"
            app:mrl_rippleDelayClick="true"
            app:mrl_ripplePersistent="false"
            app:mrl_rippleInAdapter="false">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:id="@+id/layout_top_bottom_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:background="#80000000"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/list_item_title_1"
                    style="@style/TextViewAppearance.Body1"
                    android:text="16 Feb S2016"
                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/list_item_number_of_images_1"
                    style="@style/TextViewAppearance.Caption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="2dp"
                    android:textColor="#fff" />
            </LinearLayout>

            <TextView
                android:id="@+id/list_item_favourite_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:textColor="#fff"
                android:textSize="24dp"
                tools:ignore="SpUsage" />
        </LinearLayout>

    </RelativeLayout>
</com.fras.msbm.gallery.SquareLayout>

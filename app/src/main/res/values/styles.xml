<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSplashBackground</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSplashBackground</item>
        <item name="cpbStyle">@style/CircularThemeProgressBar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WelcomeTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="WelcomeContentText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="WelcomeOptionsText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DotsLayout">
        <item name="android:alpha">0.5</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/dots_margin_bottom</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/yellow</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <!-- ListView related themes -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/cd_main_image</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <!-- <item name="android:paddingBottom">8dp</item> -->
        <item name="android:paddingRight">4dp</item>
        <item name="android:cropToPadding">true</item>
    </style>

    <style name="TextViewAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">26dp</item>
        <!-- Supports API Level 17+ -->
        <!-- <item name="android:paddingStart">26dp</item> -->
        <!-- Supports API Level 17+ -->
        <!-- <item name="android:paddingEnd">26dp</item> -->
    </style>

    <!-- Typography style 1 -->

    <style name="TextViewAppearance.Display1" parent="@style/TextViewAppearance">

        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/main_color_grey_500</item>
    </style>

    <style name="TextViewAppearance.Headline1" parent="@style/TextViewAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
    </style>

    <style name="TextViewAppearance.Title1" parent="@style/TextViewAppearance">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <style name="TextViewAppearance.Body1" parent="@style/TextViewAppearance">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
    </style>

    <style name="TextViewAppearance.Caption1" parent="@style/TextViewAppearance">

        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <!-- Typography style 2 -->

    <style name="TextViewAppearance.Display2" parent="@style/TextViewAppearance">

        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/main_color_grey_500</item>
    </style>

    <style name="TextViewAppearance.Headline2" parent="@style/TextViewAppearance">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
    </style>

    <style name="TextViewAppearance.Title2" parent="@style/TextViewAppearance">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <style name="TextViewAppearance.Body2" parent="@style/TextViewAppearance">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
    </style>

    <style name="TextViewAppearance.Caption2" parent="@style/TextViewAppearance">

        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <!-- Typography style 3 -->

    <style name="TextViewAppearance.Display3" parent="@style/TextViewAppearance">

        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/main_color_grey_500</item>
    </style>

    <style name="TextViewAppearance.Headline3" parent="@style/TextViewAppearance">

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
    </style>

    <style name="TextViewAppearance.Title3" parent="@style/TextViewAppearance">

        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <style name="TextViewAppearance.Body3" parent="@style/TextViewAppearance">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_color_grey_600</item>
    </style>

    <style name="TextViewAppearance.Caption3" parent="@style/TextViewAppearance">

        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <!-- Other styles -->
    <style name="TextViewAppearance.Fontello.SearchBar" parent="@style/TextViewAppearance">


        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_color_grey_400</item>
    </style>

    <style name="CircularThemeProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="cpb_color">#FFee44</item>
        <item name="cpb_colors">@array/gplus_colors</item>
        <item name="cpb_stroke_width">4dp</item>
        <item name="cpb_min_sweep_angle">10</item>
        <item name="cpb_max_sweep_angle">300</item>
        <item name="cpb_sweep_speed">1.0</item>
        <item name="cpb_rotation_speed">1.0</item>
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#c8ed680f</item>
        <item name="sv_showcaseColor">#ed680f</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00801A</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
    </style>

    <style name="ListItemBigtext">
        <item name="android:textColor">#25467A</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ListItemSubtext">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#000000</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/blue</item>
        <!--<item name="colorControlNormal">@color/red</item>-->
        <item name="colorControlActivated">#ffffff</item>
    </style>



</resources>
